<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle"
                  xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="#00000000" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/tab_trackpad_selected" />
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item android:left="1.0dip" android:top="1.0dip" android:right="1.0dip">
                <shape android:shape="rectangle"
                  xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="#5a000000" />
                    <stroke android:width="1.0dip" android:color="#ffffffff" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/tab_trackpad_normal" />
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="1.0dip" android:top="1.0dip" android:right="1.0dip">
                <shape android:shape="rectangle"
                  xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="#5a000000" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/tab_trackpad_normal" />
            </item>
        </layer-list>
    </item>
</selector>