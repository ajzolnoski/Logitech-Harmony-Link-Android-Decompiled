<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/control" android:right="1.0dip" android:bottom="1.0dip" />
            <item android:left="1.0dip" android:top="1.0dip">
                <shape android:shape="rectangle"
                  xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="#00ffffff" />
                    <corners android:radius="6.0dip" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/gesture_navigator" />
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true" android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/control" />
            <item>
                <bitmap android:gravity="center" android:src="@drawable/gesture_navigator" />
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true" android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle"
                  xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="#00ffffff" />
                    <corners android:radius="6.0dip" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/gesture_navigator_on" />
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item android:drawable="@drawable/control" android:right="1.0dip" android:bottom="1.0dip" />
            <item android:left="1.0dip" android:top="1.0dip">
                <shape android:shape="rectangle"
                  xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="#00ffffff" />
                    <corners android:radius="6.0dip" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/gesture_navigator_on" />
            </item>
        </layer-list>
    </item>
</selector>